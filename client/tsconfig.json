{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["node_modules", "./dist/**/"]
}
